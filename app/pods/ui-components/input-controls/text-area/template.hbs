<div class="md">{{#frost-tabs on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Description' class='description' id='description'}}
		{{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-file-strip-number-prefix 'ui-components/input-controls/text-area')}}
		{{#scroll-spy}}
			{{#scroll-to id="#summary" class="h2"}} Summary{{/scroll-to}}
			{{#scroll-to id="#behaviors" class="h2"}} Behaviors{{/scroll-to}}
			{{#scroll-to id="#guidelines" class="h2"}} Guidelines{{/scroll-to}}
			{{#scroll-to id="#visualspecification" class="h2"}} Visual Specification{{/scroll-to}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='API' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/input-controls/text-area/README')}}
		{{#scroll-spy}}
			{{#scroll-to id="#emberfrosttextarea" class="h1"}} ember-frost-textarea{{/scroll-to}}
			{{#scroll-to id="#api" class="h2"}} API{{/scroll-to}}
			{{#scroll-to id="#examples" class="h2"}} Examples{{/scroll-to}}
			{{#scroll-to id="#autofocus" class="h3"}} autofocus{{/scroll-to}}
			{{#scroll-to id="#error" class="h3"}} error{{/scroll-to}}
			{{#scroll-to id="#disabled" class="h3"}} disabled{{/scroll-to}}
			{{#scroll-to id="#readonlyandvalue" class="h3"}} readonly and value{{/scroll-to}}
			{{#scroll-to id="#colsandrows" class="h3"}} cols and rows{{/scroll-to}}
			{{#scroll-to id="#oninput" class="h3"}} onInput{{/scroll-to}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='Demo' id='demo'}}
		<div><div class="dummy-notification-container">
  {{#each notifications as |notification|}}
    {{notification-message notification=notification}}
  {{/each}}
</div>

<div class="dummy-body">
  <div class="dummy-content">
    <div class="dummy-body textarea">
  <div class="section">
    <div class="example">
        <div class="title">Basic</div>
        <div class="demo">
          {{frost-textarea}}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-textarea}}
  ```"
          }}
        </div>
    </div>
    <div class="example">
        <div class="title">Autofocus</div>
        <div class="demo">
          {{frost-textarea
            autofocus=true
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-textarea
  autofocus=true
}}
  ```"
          }}
        </div>
    </div>
    <div class="example">
        <div class="title">Placeholder</div>
        <div class="demo">
          {{frost-textarea
            placeholder='Text goes here!'
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-textarea
  placeholder='Text goes here!'
}}
  ```"
          }}
        </div>
    </div>
    <div class="example">
      <div class="title">Defined number of Columns + Rows</div>
      <div class="demo">
        {{frost-textarea
          cols="80"
          rows="6"
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-textarea
  cols='80'
  rows='6'
}}
```"
        }}
      </div>
    </div>
    <div class="example">
      <div class="title">Disabled</div>
      <div class="demo">
        {{frost-textarea
          disabled=true
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-textarea
  disabled=true
}}
```"
        }}
      </div>
    </div>
    <div class="example">
      <div class="title">Error</div>
      <div class="demo">
        {{frost-textarea
          class='error'
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-textarea
  class='error'
}}
```"
        }}
      </div>
    </div>
  </div>

  <hr>

  <div class='section'>
    <div class="example">
      <div class="title">Events: onInput</div>
      <div class="demo">
        {{frost-textarea
          onInput=(action "onInputHandler")
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-textarea
  onInput=(action 'onInputHandler')
}}
```"
        }}
      </div>
    </div>
  </div>
</div>

